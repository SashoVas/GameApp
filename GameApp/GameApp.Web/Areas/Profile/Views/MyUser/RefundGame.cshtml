@using GameApp.Web.Areas.Profile.Models
@model RefundGameViewModel
@{
    ViewData["Title"] = "Refund Game";
}
<div class="row">
    <partial name="_SettingsNavigation">
    <div class="col-lg-2"></div>
    <div class="col-lg-6">

        <table class="table table-striped table-dark">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Refund</th>
                </tr>
          </thead>
          <tbody>

            @foreach(var item in Model.Games)
            {
                <tr>
                  <td class="nopadding">
                      <div class="table-div-float-left">
                          <img class="img-fluid" width="50px" height="70px"src="~/Files/@item.IMG">
                  
                          <div class="name-column-2">
                            <h5 class="game-name">@item.Name</h5>
                          </div>
                        </div>
                  </td>
                  @if(this.User.IsInRole("Admin"))
                  {
                      <td scope="col">
                      <form method="post" asp-area="Profile" asp-controller="MyUser" asp-action="RefundGame">
                          <input type="hidden" value="@item.GameId" name="gameId"></input>
                           <input type="submit" class="btn btn-primary bg-danger" value="Refund">
                      </form>
                    </td>    
                  }
                </tr>
            }
          </tbody>
        </table>
    </div>
     <div class="col-lg-2"></div>
</div>