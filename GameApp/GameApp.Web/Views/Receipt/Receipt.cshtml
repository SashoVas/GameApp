@using GameApp.Web.Models.Receipt
@model ReceiptViewModel
@{
    ViewData["Title"] = "Receipt";
}
<h1 class="text-center">Receipt</h1>
<h1 class="text-center">@Model.ReceiptType</h1>
<hr>
<h1 class="text-center">Games</h1>
@foreach(var game in Model.Games)
{
    <div>
        <h1 >Game: @game.Name</h1>
        <a >Price: @game.Price</a>
    </div>
    <br>
}
<hr>
<div>
    <h1>Card info</h1>
    <div>
        @if(@Model.CardFirstName!=null)
        {
            <div class="mt-2">
                <a>@Model.CardType</a>
            </div>
            <div class="mt-2">
                <a>First Name: @Model.CardFirstName</a>
            </div>
            <div class="mt-2">
                <a>Last Name: @Model.CardLastName</a>
            </div>

            <div class="mt-2">
                <a >Card number:@(Model.CardNumber[0..4])...</a>
            </div>
        }
        else
        {
            <h1>&emsp; Card Deleated</h1>

        }

    </div>
</div>
<div>
    <h1 >User: @this.User.Identity.Name</h1>
    <a >TotalPrice: @Model.Games.Sum(g=>g.Price)</a>
</div>