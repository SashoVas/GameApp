                    <ul class="d-flex justify-content-center">
                        @for (int i = 10; i < 15; i++)
                        {

                            @if (@Model.TopRankedGames.Count() > i)
                            {
                                <li>
                                    <a href="/Game?title=@Model.TopRankedGames[i].Name">
                                        <img class="img-fluid" height="200px" width="180px" src="~/Files/@Model.TopRankedGames[i].ImgUrl" />
                                    </a>

                                    <br>
                                    <p class="text-overflow">@Model.TopRankedGames[i].Name</p>
                                </li>
                            }
                        }

                    </ul>
                </div>
            }
            
        </div>

        <button class="carousel-control-prev button-caurosel" type="button" data-bs-target="#carousel1" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next button-caurosel" type="button" data-bs-target="#carousel1" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>


