@using GameApp.Web.Models.Cart
@model AllItemsInCartViewModel


<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Remove</th>
    </tr>
  </thead>
  <tbody>
    @if(@Model.Items.Count()>0)
    {
        @foreach(var item in Model.Items)
        {
            <tr>
                <td>@item.GameName</td>
                <td>@item.Price </td>
                <th scope="col">
                    <form method="post">
                    <input name="id" type="hidden" value="@item.Id" >
                    <input value="Remove" asp-controller="Cart" asp-action="Remove" class="btn btn-primary btn-lg" type="submit">
                </form>
                </th>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="3">
                <h3>No Items</h3>
            </td>
            
        </tr>
       
    }

  </tbody>
</table>
<div class="d-flex">
    <form method="post">
        <input asp-controller="Cart" asp-action="Clear" value="Clear" class="btn btn-primary btn-lg" type="submit">
    </form>
    <form class="mx-1" method="post">
        <input asp-controller="Game" asp-action="Buy" value="Buy" class="btn btn-primary btn-lg" type="submit">
    </form>
    <a asp-controller="Card" asp-action="ChooseCard" class="btn btn-primary btn-lg" >Payment Methond</a>
</div>
